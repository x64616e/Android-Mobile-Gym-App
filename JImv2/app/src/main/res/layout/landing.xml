<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:layout_width="175dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="199dp"
        android:layout_marginRight="199dp"
        android:background="@drawable/rectangle"
        android:baselineAligned="false"
        android:clickable="true"
        android:text="Rank"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp" />


    <ImageButton
        android:id="@+id/leftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-11dp"
        android:layout_marginLeft="-11dp"
        android:layout_marginTop="293dp"
        android:clickable="true"
        app:srcCompat="@mipmap/left2_arrow" />

    <ImageButton
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="-12dp"
        android:layout_marginRight="-12dp"
        android:clickable="true"
        app:srcCompat="@mipmap/right2_arrow" />

    <TextView
        android:id="@+id/exercise_list"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="184dp"
        android:background="@drawable/rectangle"
        android:text=" Legpress \n Squats \n Leg Raise \n Leg Press \n Super Squats \n Hamstring Curl"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <Button
        android:id="@+id/statistics_button"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rectangledb"
        android:gravity="center"
        android:text="Statistics"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/calendar_button"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangledb"
        android:gravity="center"
        android:text="Calendar"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/date_button"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:background="@drawable/rectangledb"
        android:ems="10"
        android:inputType="date"
        android:text="10/2/2019"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/userIcon"
        android:clickable="true"
        android:layout_width="144dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="259dp"
        android:layout_marginLeft="259dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/shrek_icon" />

</RelativeLayout>