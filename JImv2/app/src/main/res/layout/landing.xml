<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:layout_width="175dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="199dp"
        android:layout_marginRight="199dp"
        android:background="@drawable/rectangle"
        android:baselineAligned="false"
        android:clickable="true"
        android:text="Rank"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp" />


    <ImageButton
        android:id="@+id/leftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-11dp"
        android:layout_marginLeft="-11dp"
        android:layout_marginTop="293dp"
        android:clickable="true"
        app:srcCompat="@mipmap/left2_arrow" />

    <ImageButton
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="-12dp"
        android:layout_marginRight="-12dp"
        android:clickable="true"
        app:srcCompat="@mipmap/right2_arrow" />


    <TextView
        android:id="@+id/exercise_list"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="183dp"
        android:height="280dp"
        android:background="@drawable/rectangle"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <Button
        android:id="@+id/excerciseList1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="Squats"
        android:clickable="true"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/excerciseList2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="Leg Press"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/addExerciseButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="(+)"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/statistics_button"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rectangledb"
        android:gravity="center"
        android:text="Statistics"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/exercise1"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:background="@drawable/rectangledb"
        android:gravity="center"
        android:text="Exercise1"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/calendar_button"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangledb"
        android:gravity="center"
        android:text="Calendar"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/date_button"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:background="@drawable/rectangledb"
        android:ems="10"
        android:inputType="date"
        android:text="10/31/2019"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/userIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:clickable="true"
        app:srcCompat="@drawable/shrek_icon2" />

</RelativeLayout>