<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="175dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="197dp"
        android:layout_marginRight="197dp"
        android:background="@drawable/rectangle"
        android:baselineAligned="false"
        android:text="Rank"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp" />


    <ImageView
        android:id="@+id/icon"
        android:layout_width="94dp"
        android:layout_height="112dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        tools:srcCompat="@tools:sample/avatars[5]" />

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="332dp"
        app:srcCompat="@mipmap/left2_arrow" />

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        app:srcCompat="@mipmap/right2_arrow" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="217dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:text=" Legpress \n Squats \n Leg Raise \n Leg Press \n Super Squats \n Hamstring Curl"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/calendar"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="656dp"
        android:layout_marginEnd="214dp"
        android:layout_marginRight="214dp"
        android:background="@drawable/rectangledb"
        android:baselineAligned="false"
        android:text="Calendar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rectangledb"
        android:baselineAligned="false"
        android:text="Statistics"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:layout_alignTop="@id/calendar" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:background="@drawable/rectangledb"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="date"
        android:text="10/2/2019"
        android:textAlignment="center"
        android:textColor="@color/white" />

</RelativeLayout>