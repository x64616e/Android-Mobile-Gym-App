<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="4dp"
    app:cardElevation="10dp" android:background="@drawable/rectangle_border_sb">

    <TextView
        android:id="@+id/exerciseNameDB"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="7dp"
        android:text="Name"
        android:textColor="@color/medium_blue"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/exerciseSetsDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="376dp"
        android:layout_marginLeft="376dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="6dp"
        android:enabled="false"
        android:inputType="number"
        android:text="0"
        android:textColor="@color/medium_blue"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/exerciseRepsDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="283dp"
        android:layout_marginLeft="283dp"
        android:layout_marginTop="26dp"
        android:inputType="number"
        android:text="0"
        android:enabled="false"
        android:textColor="@color/medium_blue"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/exerciseWeightDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="179dp"
        android:layout_marginLeft="179dp"
        android:layout_marginTop="29dp"
        android:inputType="number"
        android:enabled="false"
        android:text="0"
        android:textColor="@color/medium_blue"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/editText6"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="Weight:"
        android:textColor="@color/medium_blue"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/editText7"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="231dp"
        android:layout_marginLeft="231dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="Reps:"
        android:textColor="@color/medium_blue"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/editText8"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="327dp"
        android:layout_marginLeft="327dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="Sets:"

        android:textColor="@color/medium_blue"
        android:textSize="20dp" />

</RelativeLayout>