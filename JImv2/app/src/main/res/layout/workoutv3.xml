<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/workoutFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exerciseRecycleView"
        android:layout_width="match_parent"
        android:layout_height="426dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:padding="4dp"
        android:scrollbars="vertical" />


    <LinearLayout
        android:id="@+id/border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-3dp"
        android:background="@color/medium_blue"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/addExerciseButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rectangle"
        android:text="Add Exercise"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/heartRate"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="Heart Rate"
        android:drawableStart="@drawable/hr"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/PreviousDay"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/NextDay"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
        android:drawablePadding="20dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/doneButtonWorkout"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rectangle"
        android:text="Statistics"
        android:textColor="@color/white"
        android:textSize="20sp" />
        />



</RelativeLayout>