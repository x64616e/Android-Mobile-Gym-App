<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <FrameLayout android:layout_width="55dp"
                 android:layout_height="55dp"
                 android:layout_alignParentStart="true"
                 android:layout_marginLeft="25dp"
                 android:layout_marginTop="12dp"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                android:layout_marginBottom="12dp"
                 android:foregroundGravity="center"
    android:id="@+id/frameLayout">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ivMusic"
                app:srcCompat="@drawable/music"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorPrimary"

        />

        <ImageView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/frameLayout"
            android:layout_alignTop="@id/frameLayout"
            android:layout_alignRight="@id/frameLayout"
            android:layout_alignBottom="@id/frameLayout"
            android:src="@drawable/frame"


            />

    </FrameLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="90dp"
              android:layout_alignTop="@+id/frameLayout"
              android:layout_marginTop="3dp"
              android:singleLine="true"
              android:ellipsize="end"
              android:text="Song Title"
              android:clickable="true"
              android:textSize="20sp"
              android:textStyle="bold"
              android:id="@+id/songTitleTv"
              android:layout_toEndOf="@+id/frameLayout"
              android:layout_marginStart="23dp"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="105dp"
              android:layout_alignTop="@+id/frameLayout"
              android:layout_marginTop="32dp"
              android:text="Artist Name"
              android:singleLine="true"
              android:ellipsize="end"
              android:textSize="16sp"
              android:layout_below="@+id/songTitleTv"
              android:id="@+id/artistNameTv"
              android:layout_toEndOf="@+id/frameLayout"
              android:layout_marginStart="28dp"/>


    <ImageView android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/play"
               android:id="@+id/play"
               android:clickable="true"
               android:layout_toLeftOf="@id/stop"
               android:layout_alignTop="@+id/frameLayout"
               android:layout_marginRight="10dp"
               android:layout_marginTop="18dp"/>

    <ImageView android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/stop"
               android:id="@+id/stop"
               android:clickable="true"
               android:layout_alignParentRight="true"
               android:layout_alignTop="@+id/frameLayout"
               android:layout_marginRight="10dp"
               android:layout_marginTop="18dp"/>



</RelativeLayout>